<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
            </div>
        </div>
        {{#each product}}
            <div class="row">
                <h4 class="product-name">{{name}}</h4>
                <div class="col-lg-2">
                    <img class="product-image" src="{{image}}"
                    alt="{{name}}" height="160" width="120"/>
                </div>
                <div class="col-lg-2">
                    <p>{{description}}</p>
                </div>
                <div class="col-lg-2">
                    <p>Price: ${{price}}</p>
                </div>

                <div class="col-lg-2">
                    <button class="customize-button">Customize</button>
                    <button class="addToCart">Add To Cart</button>
                </div>
                <div class="col-lg-4">
                    <div>
                        customization form goes here! People shouldn't be able to add to cart before they customize...
                        Also going to need quantity selector.
                        <form class="customization-form">
                            {{#each customization}}
                                <label>{{@key}}</label>
                                <div class="form-group first-name">
                                    <input type="text" class="{{@key}}-input" required />
                                </div>
                            {{/each}}
                        </form>
                    </div>
                </div>
            </div>
            <hr />
        {{/each}}
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script src="../javascript/products.js"></script>

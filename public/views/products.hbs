<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
            </div>
        </div>
        {{#each product}}
                <div class="row">
                    <h4 class="">{{name}}</h4>
                    <div class="col-lg-2">
                        <img src="{{image}}" alt="Product Img" height="160" width="120"/>
                    </div>
                    <div class="col-lg-2">
                        <p>{{description}}</p>
                    </div>
                    <div class="col-lg-2">
                        <p>Price: ${{price}}</p>
                    </div>

                    <div class="col-lg-2">
                        <button class="addToCart">Add To Cart</button>
                    </div>

                </div>
<hr />
                <!-- <div><br />
                    <button class="customize">Customize</button>
                    <br />
                </div> -->
        {{/each}}
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script src="../javascript/products.js"></script>
